import matplotlib.pyplot as plt
import pandas as pd


def read_data():
    """
    Read UK crime data from year 1960 to 2014 from CSV File
    Extract every three-year data to make the graph clean
    Pass Data to clean_data function to exclude any entry
    with NAN data
    """
    # Read the CSV file using pandas
    UK_crime_data = pd.read_csv("US_Crime_Rates_1960_2014.csv")
    UK_crime_data = UK_crime_data.iloc[::3]
    # Call the clean_data function to clean the data in UK_crime_data
    UK_crime_cleaned_data = clean_data(UK_crime_data)

    # Extracting the 'Year' column
    years = UK_crime_cleaned_data['Year']
    columns_to_extract = ['Violent', 'Property', 'Murder', 'Forcible_Rape',
                          'Robbery', 'Aggravated_assault', 'Burglary', 'Larceny_Theft', 'Vehicle_Theft']
    # Extracting columns of different crime categories
    crimes = UK_crime_cleaned_data[columns_to_extract]

    return years, crimes


def clean_data(UK_crime_data):
    """
    Take data as input 
    Loop row entry of data 
    Loop Column entries of data and compare every value
    if any value is NAN then discard it
    Return clean data
    """
    cleaned_data = []

    for index, row in UK_crime_data.iterrows():
        is_valid_row = True

        # Check each column in the row
        for column in UK_crime_data.columns:
            cell_value = row[column]

            # Check if the cell is None or contains 'NAN' as a string
            if cell_value is None or cell_value == "NAN":
                is_valid_row = False
                break

        if is_valid_row:
            cleaned_data.append(row)

    cleaned_data_frame = pd.DataFrame(
        cleaned_data, columns=UK_crime_data.columns)
    return cleaned_data_frame


def line_graph(years, crimes):
    """
    Plot line graph for different Crime categories against year
    """
    for crime_category in crimes:
        plt.plot(years, crimes[crime_category], label=crime_category)


plt.figure(figsize=(12, 6))

# Calling Function 1 to read, extract, and clean data
years, crimes = read_data()
# Calling Function 2 to plot line graph
line_graph(years, crimes)

plt.title('Crime Trends Over the Years (1960-2014)')
plt.xlabel('Year')
plt.ylabel('Number of Crimes')
plt.legend(loc='upper left')
plt.show()
